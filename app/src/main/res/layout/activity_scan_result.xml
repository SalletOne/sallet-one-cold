<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="29dp"
            android:text="@string/activity_scan_result1"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="clip_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_5_corner_0471"
                android:paddingLeft="5.5dp"
                android:paddingTop="3dp"
                android:paddingRight="5.5dp"
                android:paddingBottom="3dp"
                android:text="2/3"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/activity_scan_result2"
                android:textStyle="bold"
                android:textColor="#989898"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#333333"
            android:text="@string/activity_scan_result3"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="27dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_5_corner_f8"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="clip_vertical"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/activity_scan_result4"
                    android:textStyle="bold"
                    android:textColor="#D2D2D2"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/color_black_333"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:id="@+id/tv_send_addr"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="16dp"
                android:gravity="clip_vertical"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/activity_scan_result5"
                    android:textStyle="bold"
                    android:textColor="#D2D2D2"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/color_black_333"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text=""
                    android:id="@+id/tv_get_addr"
                    android:layout_height="wrap_content"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="15dp"
                android:gravity="clip_vertical"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/activity_scan_result6"
                    android:textStyle="bold"
                    android:textColor="#D2D2D2"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/color_black_333"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text=""
                    android:id="@+id/tv_num"
                    android:layout_height="wrap_content"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:gravity="clip_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/activity_scan_result7"
                    android:textStyle="bold"
                    android:textColor="#D2D2D2"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/color_black_333"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:id="@+id/tv_fee"
                    android:layout_height="wrap_content"/>



            </LinearLayout>


        </LinearLayout>


        <TextView
            style="@style/btStyle"
            android:layout_alignParentBottom="true"
            android:text="@string/activity_scan_result8"
            android:id="@+id/bt"
            android:layout_marginTop="50dp"
            android:enabled="true"
            android:layout_marginBottom="52.5dp"
            />

    </LinearLayout>



    </ScrollView>

</RelativeLayout>