<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@drawable/shape_5_corner_white_dialog"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="22dp"
        android:background="@mipmap/ic_close"
        android:layout_marginTop="14dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_close"
        android:layout_height="22dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/ic_make_sure"
            android:layout_height="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/color_black_333"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="@string/dialog_make_sure1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="#D2D2D2"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5.5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/dialog_make_sure2"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/btStyle"
            android:layout_marginTop="60.5dp"
            android:text="@string/dialog_make_sure3"
            android:id="@+id/bt"
            android:layout_marginBottom="52.5dp"
            />
    </LinearLayout>



</RelativeLayout>