<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue"
    tools:context=".MainActivity">






    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ac_main_tv1"
            android:layout_marginLeft="22dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/tv_title"
            android:textSize="18sp"
            />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:paddingLeft="14dp"
            android:layout_marginTop="27dp"
            android:paddingRight="14dp"
            android:background="@drawable/shape_30_corner_white"
            android:layout_height="match_parent">
            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">


      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:id="@+id/rc_view"
          android:layout_marginTop="17dp"
          android:nestedScrollingEnabled="false"
          android:layout_height="match_parent"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="17dp"
        android:orientation="vertical"
        android:id="@+id/tv_beifen"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:background="@drawable/shape_5_corner_f8"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_marginTop="25dp"
            android:background="@mipmap/ic_no_beifen"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#949494"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="24dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/tvv_beifen"
            android:text="@string/no_words_back_up"
            android:layout_height="wrap_content"/>

    </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>




    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:background="@mipmap/ic_home_sao"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/iv_sao"
        android:layout_height="50dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_main_set"
        android:layout_marginTop="13dp"
        android:id="@+id/iv_set"
        android:padding="6dp"
        android:layout_marginRight="21dp"
        android:layout_height="30dp"/>

</RelativeLayout>