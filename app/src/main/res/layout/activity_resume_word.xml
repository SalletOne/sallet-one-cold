<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/title1"
        layout="@layout/title_bar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_5_corner_594b"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:enabled="false"
        android:gravity="center"
        android:id="@+id/title"

        android:text="@string/wrong_words"
        android:textColor="@color/white"
        android:textSize="16sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/title1"

        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ac_resume_word_tv1"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/ac_resume_word_tv2"
            android:textColor="#D2D2D2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/gv_1"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_marginTop="27dp"
            android:paddingTop="4dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="10dp"
            android:background="@drawable/shape_5_corner_f8"
            android:numColumns="3" />

        <GridView
            android:id="@+id/gv_2"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_marginTop="27dp"
            android:paddingTop="4dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:numColumns="3" />
        <TextView
            android:id="@+id/bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/bt_enable_selector"
            android:enabled="false"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/ac_resume_word_tv3"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    </ScrollView>



</RelativeLayout>