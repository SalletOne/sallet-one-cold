<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="29dp"
            android:text="@string/activity_scan_result_ok1"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="clip_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_5_corner_0471"
                android:paddingLeft="5.5dp"
                android:paddingTop="3dp"
                android:paddingRight="5.5dp"
                android:paddingBottom="3dp"
                android:text="3/3"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/activity_scan_result_ok2"
                android:textStyle="bold"
                android:textColor="#989898"
                android:textSize="14sp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="200dp"
            android:background="@mipmap/ic_erweima_kuang"
            android:padding="15dp"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:id="@+id/rl_ma"
            android:layout_height="200dp">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/iv_ma"
                android:layout_height="match_parent"/>
        </RelativeLayout>


        <TextView
            style="@style/btStyle"
            android:text="@string/activity_scan_result_ok3"
            android:id="@+id/bt"
            android:layout_marginTop="50dp"
            android:enabled="true"
            android:layout_below="@+id/rl_ma"
            android:layout_marginBottom="52.5dp"
            />



    </LinearLayout>

    </ScrollView>


    <ImageView
        android:layout_width="match_parent"
        android:background="@mipmap/splash_trac3"
        android:id="@+id/sp_iv_1"
        android:visibility="gone"
        android:layout_height="match_parent"/>

</RelativeLayout>